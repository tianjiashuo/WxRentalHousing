page {
  background-color: #fff;
  font-size: medium;
}
.tip {
  background-color: #fff3cd;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 14px;
  color: #fb6951;
  padding-left: 10rpx;
}
.tip text:nth-of-type(1) {
  margin-right: 10rpx;
}
view #type{
  position: relative;
  left: 30rpx;
  top : 30rpx;
  height: 90rpx;
  margin-bottom: 30rpx;
  border-bottom: 1px solid #eeeeee;  
}
 view select{
  position:absolute;
  right: 60rpx;
  top: 0rpx;
}
.formview {
  padding: 20rpx;
  display: flex;
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 1px solid #eeeeee;
}
#picplace{
 padding-bottom: 100rpx;
}
 /* form view:nth-last-of-type(1){
  border: none;
}  */
 
form view label {
  margin-right: 30rpx;
}

form view input {
  padding-top: 20rpx;
  line-height: 80rpx;
}

form view switch{
  position: absolute;
  right: 15rpx;
}
.tip-msg{
  color: #a4a4a4;
  border-bottom:  1px solid #eeeeee;
  padding:30rpx
}
.tip-msg text{
  margin-left: 10rpx;
  font-size: 12px;
}
.sendbtn{
  position: fixed;
  bottom: 0px;
  width: 750rpx;
  height: 100rpx;
  background:#758a99;
  padding: 0;
  margin-top: 30rpx;
  text-align: center;
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index:9999;
  font-size: 18px;
}
.sendbtn button {
  position:fixed;
  width: 100%;
  height: 100rpx;
  opacity: 0;
  bottom: 0;
  border-radius: 15rpx;
}

.mask{
  width:100%;
  height:100%;
  position:fixed;
  background-color:#999;
  z-index:9999;
  top:0;
  left:0;
  opacity:0.5;
}

/* 图片 */
.images_box{
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: flex-start;
  background-color: white;
}
.img-box{
  border: 2rpx;
  border-style: dashed;
  border-color:#8a8a8a;
  width: 200rpx;
  height: 200rpx;
  margin-left: 35rpx;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  position: relative;
}
/* 删除图片 */
.img-delect{
  width:50rpx;
  height:50rpx;
  border-radius:50%;
  position:absolute;
  right:-20rpx;
  top:-20rpx;
}
.img{
  width: 100%;
  height: 100%;
}